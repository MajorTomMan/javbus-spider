<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jav.server.dao.relation.ActressSeriesDao">
    
    <!-- ActressSeriesRelation resultMap -->
    <resultMap id="actressSeriesRelationResultMap" type="com.jav.server.entity.relation.ActressSeriesRelation">
        <id property="id" column="id" />
        <result property="actressId" column="actress_id" />
        <result property="seriesId" column="series_id" />
    </resultMap>
    
    <insert id="addActressSeriesRelation" parameterType="List">
        <!-- 插入单个关系 -->
        INSERT INTO actress_series_relation (actress_id, series_id) 
        VALUES (#{actressId}, #{seriesId})
    </insert>
    
    <delete id="deleteActressSeriesRelation">
        <!-- 删除单个关系 -->
        DELETE FROM actress_series_relation 
        WHERE actress_id = #{actressId} AND series_id = #{seriesId}
    </delete>

    <insert id="addActressSeriesRelations" parameterType="List">
        <!-- 插入多个关系 -->
        INSERT INTO actress_series_relation (actress_id, series_id) VALUES
        <foreach collection="list" item="relation" separator=",">
            (#{relation.actressId}, #{relation.seriesId})
        </foreach>
    </insert>
    
    <update id="updateActressSeriesRelations" parameterType="com.jav.server.entity.relation.ActressSeriesRelation">
        <foreach collection="relations" item="relation" separator=";">
            UPDATE actress_series_relation
            SET actress_id = #{relation.actressId}, series_id = #{relation.seriesId}
            WHERE id = #{relation.id} 
        </foreach>
    </update>
    
    <select id="queryActressSeriesRelation" resultMap="actressSeriesRelationResultMap">
        SELECT * FROM actress_series_relation 
        WHERE actress_id = #{actressId} AND series_id = #{seriesId}
    </select>

    <select id="queryActressSeriesRelations" resultMap="actressSeriesRelationResultMap">
        SELECT * FROM actress_series_relation 
        WHERE actress_id IN 
        <foreach collection="actressIds" item="actressId" open="(" separator="," close=")">
            #{actressId}
        </foreach> 
        AND series_id = #{seriesId}
    </select>

    <!-- 查询某女优所有系列关系 -->
    <select id="queryActressSeriesRelationsByActressId" resultMap="actressSeriesRelationResultMap">
        SELECT * FROM actress_series_relation 
        WHERE actress_id=#{actressId}
    </select>

</mapper>
