<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jav.server.dao.relation.MovieLabelDao">
    <!-- MovieLabelRelation resultMap -->
    <resultMap id="movieLabelRelationResultMap"
        type="com.jav.server.entity.relation.MovieLabelRelation">
        <id property="id" column="id" />
        <result property="movieId" column="movie_id" />
        <result property="labelId" column="label_id" />
    </resultMap>
    <insert id="addMovieLabelRelation"
        parameterType="com.jav.server.entity.relation.MovieLabelRelation"> INSERT
        INTO movie_label_relation (movie_id, label_id) VALUES (#{movieId}, #{labelId}) </insert>

    <delete id="deleteMovieLabelRelation"> DELETE FROM movie_label_relation WHERE movie_id =
        #{movieId} AND label_id = #{labelId} </delete>

    <select id="queryMovieLabelRelation"
        resultMap="movieLabelRelationResultMap"> 
        SELECT * FROM movie_label_relation 
        WHERE movie_id = #{movieId} AND label_id = #{labelId} 
    </select>

    <!-- queryMovieLabelRelationByMovieId --> 

    <select id="queryMovieLabelRelationByMovieId" resultMap="movieLabelRelationResultMap">
        SELECT * FROM movie_label_relation 
        WHERE movie_id = #{movieId}
    </select>

    <!-- updateMovieLabelRelation -->
    <update id="updateMovieLabelRelations" parameterType="java.util.List">
        <foreach collection="relations" item="relation" separator=";">
            UPDATE movie_label_relation
            SET movie_id = #{relation.movieId}, label_id = #{relation.labelId}
            WHERE id = #{relation.id}
        </foreach>
    </update>
</mapper>
