<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jav.server.dao.base.SeriesDao">
    <select id="querySeriesById" parameterType="java.lang.Integer" resultType="com.jav.server.entity.base.Series">
        SELECT *
        FROM series
        WHERE id = #{id}
    </select>
    <select id="querySeriesByName" parameterType="java.lang.String" resultType="com.jav.server.entity.base.Series">
        SELECT *
        FROM series
        WHERE name=#{name}
    </select>
    <insert id="save" parameterType="com.jav.server.entity.base.Series">
        INSERT INTO series (name,link)
        VALUES ( #{name} , #{link} )
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM series
        WHERE id = #{id}
    </delete>

    <!-- querySeriesByIds --> 

    <select id="querySeriesByIds">
        SELECT * FROM series WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="updateSeries">
        UPDATE series
        SET name = #{name},link=#{link}
        WHERE id = #{id}
    </update>
</mapper>