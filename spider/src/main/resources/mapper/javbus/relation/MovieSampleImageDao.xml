<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.relation.MovieSampleImageDao">
    <!-- MovieSampleImageRelation resultMap -->
    <resultMap id="movieSampleImageRelationResultMap"
        type="com.javbus.spider.spider.entity.relation.MovieSampleImageRelation">
        <id property="id" column="id" />
        <result property="movieId" column="movie_id" />
        <result property="sampleImageId" column="sample_image_id" />
    </resultMap>

    <insert id="addMovieSampleImageRelation"
        parameterType="com.javbus.spider.spider.entity.relation.MovieSampleImageRelation">
        INSERT INTO movie_sample_image_relation (movie_id, sample_image_id) VALUES (#{movieId},
        #{sampleImageId})
    </insert>

    <delete id="deleteMovieSampleImageRelation">
        DELETE FROM movie_sample_image_relation WHERE
        movie_id = #{movieId} AND sample_image_id = #{sampleImageId}
    </delete>

    <insert id="addMovieSampleImageRelations" parameterType="List">
        INSERT INTO
        movie_sample_image_relation (movie_id, sample_image_id) VALUES <foreach collection="list"
            item="relation" separator=","> (#{relation.movieId}, #{relation.sampleImageId}) </foreach>
    </insert>

    <select id="queryMovieSampleImageRelation"
        resultMap="movieSampleImageRelationResultMap"> 
        SELECT *
        FROM movie_sample_image_relation WHERE movie_id = #{movieId} AND sample_image_id =
        #{sampleImageId} 
    </select>

    <select id="queryMovieSampleImageRelations"
        resultMap="movieSampleImageRelationResultMap"> 
        SELECT *
        FROM movie_sample_image_relation WHERE movie_id=#{movieId} AND sample_image_id IN <foreach
            collection="sampleImageIds" item="sampleImageId" open="(" separator="," close=")">
            #{sampleImageId} </foreach>
    </select>

    <!-- queryMovieSampleImageRelationsByMovieId --> 

    <select id="queryMovieSampleImageRelationsByMovieId" 
        resultMap="movieSampleImageRelationResultMap">
        SELECT *
        FROM movie_sample_image_relation 
        WHERE movie_id=#{movieId}
    </select>

    <!-- updateMovieSampleImageRelation -->
    <update id="updateMovieSampleImageRelations" parameterType="java.util.List">
        <foreach collection="relations" item="relation" separator=";">
            UPDATE movie_sample_image_relation
            SET movie_id = #{relation.movieId}, sample_image_id = #{relation.sampleImageId}
            WHERE id = #{relation.id}
        </foreach>
    </update>
</mapper>
