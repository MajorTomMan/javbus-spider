<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.relation.MovieLabelDao">
    <!-- MovieLabelRelation resultMap -->
    <resultMap id="movieLabelRelationResultMap"
        type="com.javbus.spider.spider.entity.relation.MovieLabelRelation">
        <id property="id" column="id" />
        <result property="movieId" column="movie_id" />
        <result property="labelId" column="label_id" />
    </resultMap>
    <insert id="addMovieLabelRelation"
        parameterType="com.javbus.spider.spider.entity.relation.MovieLabelRelation"> INSERT IGNORE
        INTO movie_label_relation (movie_id, label_id) VALUES (#{movieId}, #{labelId}) </insert>

    <delete id="deleteMovieLabelRelation"> DELETE FROM movie_label_relation WHERE movie_id =
        #{movieId} AND label_id = #{labelId} </delete>

    <select id="queryMovieLabelRelation"
        resultMap="movieLabelRelationResultMap"> 
        Select * 
        FROM movie_label_relation 
        WHERE movie_id = #{movieId} AND label_id = #{labelId} 
    </select>

    <!-- queryMovieLabelRelationByMovieId --> 

    <select id="queryMovieLabelRelationByMovieId" resultMap="movieLabelRelationResultMap">
        Select * 
        FROM movie_label_relation 
        WHERE movie_id = #{movieId}
    </select>
</mapper>