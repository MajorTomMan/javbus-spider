<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.relation.MovieSeriesDao">
    <!-- MovieSeriesRelation resultMap -->
    <resultMap id="movieSeriesRelationResultMap"
        type="com.javbus.spider.spider.entity.relation.MovieSeriesRelation">
        <id property="id" column="id" />
        <result property="movieId" column="movie_id" />
        <result property="seriesId" column="series_id" />
    </resultMap>
    <insert id="addMovieSeriesRelation"
        parameterType="com.javbus.spider.spider.entity.relation.MovieDirectorRelation"> INSERT
        IGNORE INTO movie_series_relation (movie_id, series_id) VALUES (#{movieId}, #{seriesId}) </insert>

    <delete id="deleteMovieSeriesRelation"> DELETE FROM movie_series_relation WHERE movie_id =
        #{movieId} AND series_id = #{seriesId} </delete>
    <select id="queryMovieSeriesRelation"
        resultMap="movieSeriesRelationResultMap"> SELECT * FROM
        movie_series_relation WHERE movie_id = #{movieId} AND series_id = #{seriesId} </select>
</mapper>