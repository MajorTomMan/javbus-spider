<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.relation.MovieBigImageDao">
    <!-- MovieBigImageRelation resultMap -->
    <resultMap id="movieBigImageRelationResultMap"
        type="com.javbus.spider.spider.entity.relation.MovieBigImageRelation">
        <id property="id" column="id" />
        <result property="movieId" column="movie_id" />
        <result property="bigImageId" column="big_image_id" />
    </resultMap>
    <insert id="addMovieBigImageRelation"
        parameterType="com.javbus.spider.spider.entity.relation.MovieBigImageRelation"> INSERT
        IGNORE INTO movie_big_image_relation (movie_id, big_image_id) VALUES (#{movieId},
        #{bigImageId}) </insert>

    <delete id="deleteMovieBigImageRelation"> DELETE FROM movie_big_image_relation WHERE movie_id =
        #{movieId} AND big_image_id = #{bigImageId} </delete>

    <select id="queryMovieBigImageRelation"
        resultMap="movieBigImageRelationResultMap"> SELECT * FROM
        movie_big_image_relation WHERE movie_id = #{movieId} AND big_image_id = #{bigImageId} </select>

    <!-- queryMovieBigImageRelationByMovieId --> 

    <select id="queryMovieBigImageRelationByMovieId" resultMap="movieBigImageRelationResultMap">
        SELECT * FROM movie_big_image_relation WHERE movie_id=#{movieId}
    </select>
</mapper>