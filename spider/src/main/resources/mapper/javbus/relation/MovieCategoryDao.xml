<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javbus.spider.spider.dao.relation.MovieCategoryDao">
    
    <!-- MovieCategoryRelation resultMap -->
    <resultMap id="movieCategoryRelationResultMap" type="com.javbus.spider.spider.entity.relation.MovieCategoryRelation">
        <id property="id" column="id" />
        <result property="movieId" column="movie_id" />
        <result property="categoryId" column="category_id" />
    </resultMap>
    
    <insert id="addMovieCategoryRelation" parameterType="com.javbus.spider.spider.entity.relation.MovieCategoryRelation">
        INSERT IGNORE INTO movie_category_relation (movie_id, category_id) 
        VALUES (#{movieId}, #{categoryId})
    </insert>

    <delete id="deleteMovieCategoryRelation">
        DELETE FROM movie_category_relation 
        WHERE movie_id = #{movieId} AND category_id = #{categoryId}
    </delete>

    <!-- Other operations as needed -->

    <!-- 批量添加电影与分类关系 -->
    <insert id="addMovieCategoryRelations" parameterType="java.util.List">
        INSERT IGNORE INTO movie_category_relation (movie_id, category_id) VALUES 
        <foreach collection="list" item="item" separator=","> 
            (#{item.movieId}, #{item.categoryId}) 
        </foreach>
    </insert>
    
    <select id="queryMovieCategoryRelations" resultMap="movieCategoryRelationResultMap">
        SELECT * FROM movie_category_relation 
        WHERE movie_id = #{movieId} AND category_id IN 
        <foreach collection="categoryIds" item="categoryId" open="(" separator="," close=")">
            #{categoryId} 
        </foreach>
    </select>

    <!-- 查询某电影所有分类关系 -->
    <select id="queryMovieCategoryRelationsByMovieId" resultMap="movieCategoryRelationResultMap">
        SELECT * FROM movie_category_relation WHERE movie_id = #{movieId}
    </select>
    
    <update id="updateMovieCategoryRelations" parameterType="java.util.List">
        <foreach collection="relations" item="relation" separator=";">
            UPDATE movie_category_relation
            SET movie_id = #{relation.movieId}, category_id = #{relation.categoryId}
            WHERE id = #{relation.id}
        </foreach>
    </update>
</mapper>
