<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.base.StudioDao">

    <select id="queryStudioById" parameterType="java.lang.Integer" resultType="com.javbus.spider.spider.entity.base.Studio">
        SELECT *
        FROM studio
        WHERE id = #{id}
    </select>
    <select id="queryStudioByName" parameterType="java.lang.String" resultType="com.javbus.spider.spider.entity.base.Studio">
        SELECT *
        FROM studio
        WHERE name = #{name}
    </select>
    <insert id="save" parameterType="com.javbus.spider.spider.entity.base.Studio">
        INSERT INTO studio (name,link)
        VALUES (#{name},#{link})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM studio
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.javbus.spider.spider.entity.base.Studio">
        UPDATE studio
        SET name = #{name},link=#{link}
        WHERE id = #{id}
    </update>

    <!-- queryStudioByIds --> 

    <select id="queryStudioByIds">
        SELECT * FROM studio WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>
