<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.base.BigImageDao">
    <!-- 增加 BigImage 记录 -->
    <insert id="saveBigImage" parameterType="com.javbus.spider.spider.entity.base.BigImage">
        INSERT IGNORE INTO big_image (link)
        VALUES (#{link})
    </insert>

    <!-- 删除 BigImage 记录 -->
    <delete id="deleteBigImage" parameterType="java.lang.Integer">
        DELETE FROM big_image WHERE id = #{id}
    </delete>

    <!-- 更新 BigImage 记录 -->
    <update id="updateBigImage" parameterType="com.javbus.spider.spider.entity.base.BigImage">
        UPDATE big_image SET link = #{link} WHERE id = #{id}
    </update>

    <!-- 根据 ID 查询 BigImage 记录 -->
    <select id="queryBigImageById" resultType="com.javbus.spider.spider.entity.base.BigImage">
        SELECT * FROM big_image WHERE id = #{id}
    </select>

    <!-- queryBigImageByLink --> 

    <select id="queryBigImageByLink" parameterType="java.lang.String">
        select * from big_image where link=#{link}
    </select>
</mapper>