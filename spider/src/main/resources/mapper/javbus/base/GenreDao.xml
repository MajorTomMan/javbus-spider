<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javbus.spider.spider.dao.base.GenreDao">

    <insert id="saveGenre" parameterType="com.javbus.spider.spider.entity.base.Genre"> INSERT IGNORE
        INTO genre (name) VALUES (#{name}) </insert>
    <insert id="saveGenres" parameterType="com.javbus.spider.spider.entity.base.Genre"> INSERT
        IGNORE INTO genre (name) VALUES <foreach collection="list" item="genre" separator=",">
        (#{genre.name}) </foreach>
    </insert>

    <!-- 删除电影记录 -->
    <delete id="deleteGenre" parameterType="Integer"> DELETE FROM genre WHERE id = #{id} </delete>

    <!-- 更新电影记录 -->
    <update id="updateGenre" parameterType="com.javbus.spider.spider.entity.base.Genre"> UPDATE
        genre SET name=#{name}, WHERE id = #{id} </update>


    <!-- queryMovieByCode -->

    <select id="queryGenreByName" parameterType="java.lang.String"
        resultType="com.javbus.spider.spider.entity.base.Genre"> select * from genre where
        name=#{name} </select>

    <select id="queryGenreById" parameterType="java.lang.Integer"
        resultType="com.javbus.spider.spider.entity.base.Genre"> select * from genre where id=#{id} </select>

    <!-- queryGenreIdsByNames -->

    <select id="queryGenreIdsByNames" parameterType="java.lang.String"
        resultType="java.lang.Integer"> select id from genre where name in <foreach
            collection="list" item="name" open="(" separator="," close=")"> #{name} </foreach>
    </select>

    <!-- queryGenreIdByName --> 

    <select id="queryGenreIdByName" parameterType="java.lang.String" resultType="java.lang.Integer">
        select id from genre where
        name=#{name} 
    </select>
</mapper>