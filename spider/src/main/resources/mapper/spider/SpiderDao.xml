<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javbus.spider.spider.dao.SpiderDao">
    <!-- resultMap - 映射查询结果到实体类 -->
    <resultMap id="questionResultMap" type="com.javbus.spider.spider.entity.Question">
        <id column="question_id" property="id" />
        <result column="question_type" property="type" />
        <result column="question_rank" property="rank" />
        <result column="title" property="title" />
        <result column="op1" property="op1" />
        <result column="op2" property="op2" />
        <result column="op3" property="op3" />
        <result column="op4" property="op4" />
        <result column="titleType" property="titleType" />
        <result column="titlePic" property="titlePic" />
    </resultMap>
    <!-- 插入操作 -->
    <insert id="insertQuestion" parameterType="com.javbus.spider.spider.entity.Question"> INSERT
        INTO question (question_id, question_type, question_rank, title, op1, op2, op3, op4,
        titleType, titlePic) VALUES (#{id}, #{type}, #{rank}, #{title},
        #{op1}, #{op2}, #{op3}, #{op4}, #{titleType}, #{titlePic}) </insert>

    <!-- 查询操作 - 根据问题ID -->
    <select id="getQuestionById" resultType="com.javbus.spider.spider.entity.Question"
        parameterType="int"> SELECT * FROM question WHERE question_id = #{questionId} </select>

    <!-- 更新操作 - 根据问题ID -->
    <update id="updateQuestion" parameterType="com.javbus.spider.spider.entity.Question"> UPDATE
        question SET question_type = #{questionType}, question_rank = #{questionRank}, title =
        #{title}, op1 = #{op1}, op2 = #{op2}, op3 = #{op3}, op4 = #{op4}, titleType = #{titleType},
        titlePic = #{titlePic} WHERE question_id = #{questionId} </update>

    <!-- 删除操作 - 根据问题ID -->
    <delete id="deleteQuestion" parameterType="int"> DELETE FROM question WHERE question_id =
        #{questionId} </delete>
</mapper>